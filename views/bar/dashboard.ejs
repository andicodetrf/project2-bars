<div class="container mt-5">

  <% let arr = [] %>
  <% featuredBars.forEach((bar) => { %>
    <% if(bar.isFeatured){ %>
      <% arr.push(bar) %>
   <% } %>
  <% }) %>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%if(arr[0]) {%>
              <a href="/bar/bar/<%=arr[0]._id %>">
                <% if(arr[0].barImage){ %>
                  <img src="<%= arr[0].barImage %>" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
                <% } else { %>
                  <img src="/img/noImgph.jpg" class="d-block w-100 "  style="height: 30vh; object-fit: cover;" alt="...">
                <% } %>
              </a>
            <% } else { %>
              
              <img src="/img/advertph.jpg" style="height: 30vh; object-fit: cover;" class="d-block w-100 "  alt="...">
            <% } %>
          </div>
          <div class="carousel-item">
            <%if(arr[1]) {%>
              <a href="/bar/bar/<%=arr[1]._id %>">
                <% if(arr[1].barImage){ %>
                  <img src="<%= arr[1].barImage %>" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
                <% } else { %>
                  <img src="/img/noImgph.jpg" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
                <% } %>
              </a>
            <% } else { %>
              <img src="/img/advertph.jpg" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
            <% } %>
          </div>
          <div class="carousel-item">
            <%if(arr[2]) {%>
              <a href="/bar/bar/<%=arr[2]._id %>">
                <% if(arr[2].barImage){ %>
                  <img src="<%= arr[2].barImage %>" class="d-block w-100 " style="height: 30vh; object-fit: cover;" alt="...">
                <% } else { %>
                  <img src="/img/noImgph.jpg" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
                <% } %>
              </a>
            <% } else { %>
              <img src="/img/advertph.jpg" class="d-block w-100 " style="height: 30vh; object-fit: cover;"  alt="...">
          <% } %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mt-5">
      
      <% let max = 3 %>
      <% let count = 0 %>
      <% featuredBars.forEach((bar) => { %>
        <% if(bar.isFeatured){ %>
          <% if(count < max){ %>
          
        <div class="col mb-4">
          <div class="card">
            <a class="text-dark" href="/bar/bar/<%= bar._id %>">
           <% if(bar.barImage){ %>
            <img src="<%= bar.barImage %>" style="height: 20vh; object-fit: cover;" class="card-img-top" alt="...">
            <% } else { %>
              <img src="/img/noImgph.jpg" style="height: 20vh; object-fit: cover;" class="card-img-top" alt="...">
           <%  } %>
            <div class="card-body">
              <h5 class="card-title"><%= bar.barName %></h5>
              <% if(bar.final_rating){ %>
                <p class="card-text">Ratings: <%= bar.final_rating %> / 5 (<%=bar.rate_reviews.length %>)</p>
            <% } else { %>
              <p class="card-text">Ratings: --</p>
            <% } %>
              <p class="card-text"><%= bar.barLocate.locationName %></p>
              <p class="card-text text-muted">Brews: <%= bar.pintPrice[0].brewType %>
                <% if(bar.pintPrice[1].brewType){ %>
                 , <%= bar.pintPrice[1].brewType %>
                     <% } %>
                </p>
             <p class="card-text">Happy Hour Price: $<%= bar.HHStartPrice %> onwards</p>
             <p class="card-text">Happy Hours: <%= bar.HHStartTime %> -  <%= bar.HHEndTime %></p>
            </div>
          </a>
          </div>
        </div>

        <% count++ %>
        <% } %>
        <% } %>
      <% }) %>

    </div>
      <hr> 

      <div class="container mb-5">
        <form action="/bar/advSearch" method="GET">
    
            <h5 class="text-muted">Advanced Search: </h5>
            <label class="text-muted">Locations OR Brews</label>
            <input type="text" class="form-control" name="locORbrew" id="" placeholder="Try.. Boat Quay or Lager or Stout">
    
            
            <label class="text-muted mt-3">Happy Hour Price</label>
            <input type="text" class="form-control" name="HHPrice" id="HHadv" placeholder="10">
    

            <label class="text-muted mt-3">Normal Price</label>
            <input type="text" class="form-control" name="NHPrice" id="NHadv" placeholder="12">


            <button class="btn btn-dark my-2 text-warning" type="submit">Search</button>
    
        </form>
    
    </div>

</div>