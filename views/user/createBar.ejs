<div class="container my-5">

    <h2>New Bar</h2>
    
    <form action="/user/create" method="post" enctype="multipart/form-data">
    
        <div>
            <div class="form-row">
              <div class="form-group col-md-12">
                <label>Bar Name</label>
                <input type="text" class="form-control" name="barName" id="" placeholder="Penny Black">
              </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-4">
                <label>Select Location</label>
                <select name="barLocate" class="form-control">
                    <option value="">Select Location</option>
                <% selectLocation.forEach((selectLoc) =>{ %>
                        <option value="<%= selectLoc._id %>"><%= selectLoc.locationName %></option>    
                        <% }) %>
                </select>
            </div>
        </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                  <label>Address</label>
                  <input type="text" class="form-control" name="address" id="" placeholder="26 Boat Quay Singapore 049888">
                </div>

                <div class="form-group col-md-4">
                    <label>Contact No</label>
                    <input type="text" class="form-control" name="contactNo" id="" placeholder="3333 4444">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                  <label>Opening Hour</label>
                  <input type="text" class="form-control" name="openingHour" id="" placeholder="1400 - 2230">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                  <label>Happy Hour Start Time</label>
                  <input type="text" class="form-control" name="HHStartTime" id="" placeholder="1600">
                </div>

                <div class="form-group col-md-6">
                    <label>Happy Hour End Time</label>
                    <input type="text" class="form-control" name="HHEndTime" id="" placeholder="2000">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                  <label>Happy Hour Start Price</label>
                  <input type="number" class="form-control" name="HHStartPrice" id="" placeholder="10">
                </div>
            </div>

            <div class="form-row">
                <!-- <div id="brewtype-group-1" > -->
                    <div class="form-group col-md-6">
                        <label>Brew Type 1</label>
                        <input type="text" class="form-control" name="pintPrice[0][brewType]" id="" placeholder="Lager / Stout">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Happy Hour Price</label>
                        <input type="number" class="form-control" name="pintPrice[0][HHprice]" id="" placeholder="10">
                    </div>
                    
                    <div class="form-group col-md-3">
                        <label>Normal Hour Price</label>
                        <input type="number" class="form-control" name="pintPrice[0][NHprice]" id="" placeholder="12">
                    </div>
                <!-- </div> -->

                <!-- <div id="brewtype-group-2" > -->
                    <div class="form-group col-md-6">
                        <label>Brew Type 2</label>
                        <input type="text" class="form-control" name="pintPrice[1][brewType]" id="" placeholder="Lager / Stout">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Happy Hour Price</label>
                        <input type="number" class="form-control" name="pintPrice[1][HHprice]" id="" placeholder="12">
                    </div>
                    
                    <div class="form-group col-md-3">
                        <label>Normal Hour Price</label>
                        <input type="number" class="form-control" name="pintPrice[1][NHprice]" id="" placeholder="14">
                    </div>
                <!-- </div> -->
            


            </div>


            <div class="form-group">
                <label>Upload Bar Image</label>
                <input type="file" accept="image/png , image/jpg" name="barImage" class="form-control-file" id="">
        

            </div>
    

        <div class='mt-3'>
            <button class="btn btn-primary" type="submit">Create Bar</button>
        </div>
    </form>
    
    </div>