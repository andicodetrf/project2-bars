<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="/css/style.css">

    <link rel="shortcut icon" type="image/png" href="/img/beerfav256.png">

    <title>BrewTime</title>


</head>
<body>

    <% if(alerts.error) {%>
        <% alerts.error.forEach((message) => {%>
          <div class="alert alert-danger mb-0">
            <%= message %>
          </div>
      <% }) }%>
      <% if(alerts.success) {%>
        <% alerts.success.forEach((message) => {%>
          <div class="alert alert-success mb-0">
            <%= message %>
          </div>
          <% }) }%>


    <!----- BOOTSTRAP NAVBAR -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
   
        <a href="/"><img src="/img/beerA32.png"></a>
        <a class="nav-link text-warning" href="/">BrewTime <span class="sr-only">(current)</span></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            
            <li class="nav-item">
              <a class="nav-link text-warning" href="/bar/locations">Locations</a>
            </li>

            <% if(currentUser){ %>
              <% if(currentUser.isBarOwner){ %>
                    <li class="nav-item">
                      <a class="nav-link text-warning" href="/user/show/<%= currentUser._id %>">Owner's Profile</a>
                    </li>
              <% } %>
            <% } %>

            <% if(currentUser){ %>
              <% if(currentUser.isAdmin){ %>
                    <li class="nav-item">
                      <a class="nav-link text-warning" href="/user/admin/settings">Admin Settings</a>
                    </li>
              <% } %>
            <% } %>

            <!-- <li class="nav-item">
              <a class="nav-link text-warning disabled" href="#">Disabled</a>
            </li> -->
          </ul>

          <form action="/bar/search" method="GET" class="form-inline my-2 my-lg-0">
            <input id="navSearch" name="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>

            <% if(!currentUser){ %>
              <ul class="navbar-nav mr-auto">
                  <li class="nav-item ml-4">
                    <a class="nav-link text-warning" href="/auth/login">Log In</a>
                  </li>
              </ul>
            <% } else { %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item ml-4">
                  <a class="nav-link text-warning" href="/auth/logout">Log Out</a>
                </li>
            </ul>
              
            <% } %>

          </form>
        </div>
      </nav>




    <%- body %>

    <nav class="fixed-bottom navbar-inverse bg-dark pb-2 pt-1">

      <div class="text-center">

        <div class="badge badge-warning px-3"><small>&copy;<a href="https://www.linkedin.com/in/andrea-lau-al/" class="text-dark mx-1">Andi L.</a><a href="https://github.com/andicodetrf"><img src="/img/GitHubDark.png"></a></small></div>

      </div>
    
    </nav>

    <!-- BOOTSTRAP CDN -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src='/js/advPriceFilter.js'></script>
    <script src='/js/custom.js'></script>


</body>
</html>